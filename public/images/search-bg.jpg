<svg width="1200" height="400" viewBox="0 0 1200 400" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Light sky background -->
  <defs>
    <linearGradient id="lightSky" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#f0f8ff;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#e6f3ff;stop-opacity:1" />
    </linearGradient>
    <pattern id="subtleClouds" patternUnits="userSpaceOnUse" width="300" height="150">
      <ellipse cx="100" cy="75" rx="60" ry="30" fill="#ffffff" opacity="0.4"/>
      <ellipse cx="200" cy="50" rx="40" ry="20" fill="#ffffff" opacity="0.3"/>
    </pattern>
  </defs>
  
  <!-- Sky background -->
  <rect width="1200" height="400" fill="url(#lightSky)"/>
  
  <!-- Subtle cloud pattern -->
  <rect width="1200" height="400" fill="url(#subtleClouds)"/>
  
  <!-- Airport terminal silhouette in the distance -->
  <g opacity="0.2">
    <rect x="200" y="300" width="800" height="80" fill="#2a5298"/>
    <rect x="400" y="280" width="100" height="20" fill="#2a5298"/>
    <rect x="600" y="280" width="100" height="20" fill="#2a5298"/>
    <circle cx="500" cy="270" r="8" fill="#2a5298"/>
  </g>
  
  <!-- Subtle airplane trails -->
  <g opacity="0.15">
    <path d="M100,100 Q300,120 500,110 Q700,100 900,115" stroke="#2a5298" stroke-width="2" fill="none"/>
    <path d="M200,180 Q400,200 600,190 Q800,180 1000,195" stroke="#2a5298" stroke-width="2" fill="none"/>
  </g>
</svg>
